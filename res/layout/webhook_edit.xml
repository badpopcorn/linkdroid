<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="@string/webhook_edit_name_label"></TextView>
    <EditText android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:id="@+id/webhook_edit_name"></EditText>

    <TextView android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="@string/webhook_edit_uri_label"></TextView>
    <EditText android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:id="@+id/webhook_edit_uri"></EditText>

    <TextView android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:text="@string/webhook_edit_secret_label"></TextView>
    <EditText android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:id="@+id/webhook_edit_secret"></EditText>

    <CheckBox android:id="@+id/webhook_edit_nonce_random"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text="@string/webhook_edit_nonce_random_label" />
    <CheckBox android:id="@+id/webhook_edit_nonce_timestamp"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:text="@string/webhook_edit_nonce_timestamp_label" />
  </LinearLayout>
</ScrollView>